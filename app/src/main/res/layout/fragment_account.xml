<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AccountFragment"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Header_background"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/header_background"
        app:layout_constraintTop_toTopOf="parent">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/profile"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_account_circle_24"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/browser_actions_bg_grey"
            android:textStyle="bold"
            />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/editBtn"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintStart_toEndOf="@+id/name"
            app:layout_constraintTop_toTopOf="@+id/name"
            android:layout_marginLeft="@dimen/_15sdp"
            android:src="@drawable/ic_baseline_edit_24"

            />



        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:textSize="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/name"
            android:textColor="@color/browser_actions_bg_grey"
            android:gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/Header_background"
        android:layout_marginTop="@dimen/_50sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <soup.neumorphism.NeumorphCardView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_gravity="center"
                android:elevation="@dimen/_5sdp"
                app:neumorph_backgroundColor="@color/danger"
                app:neumorph_shadowColorDark="@color/dark_shadow"
                app:neumorph_shadowColorLight="@color/light_shadow"
                app:neumorph_shapeType="flat"
                app:neumorph_shapeAppearance="@style/NeumorphismCard">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/faqBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGray"
                    android:background="@drawable/submit_btn"
                    android:text="FAQ"/>


            </soup.neumorphism.NeumorphCardView>


            <soup.neumorphism.NeumorphCardView
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center"
                android:elevation="@dimen/_5sdp"
                app:neumorph_backgroundColor="@color/teal_700"
                app:neumorph_shadowColorDark="@color/dark_shadow"
                app:neumorph_shadowColorLight="@color/light_shadow"
                app:neumorph_shapeType="flat"
                app:neumorph_shapeAppearance="@style/NeumorphismCard">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/termsBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:textStyle="bold"
                    android:textColor="@color/lightGray"
                    android:background="@drawable/terms_btn"


                    android:text="Terms and Conditions"/>


            </soup.neumorphism.NeumorphCardView>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:text="Version 1.0"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_50sdp"
                android:text="Â© Final Year Project 2021"
                android:gravity="center"
                android:textSize="@dimen/_15sdp"/>


        </LinearLayout>



    </ScrollView>





</androidx.constraintlayout.widget.ConstraintLayout>