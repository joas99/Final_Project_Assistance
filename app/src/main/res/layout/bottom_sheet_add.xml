<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_30sdp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter worker's details"
        android:textSize="@dimen/_19sdp"
        android:gravity="center"
        />


    <soup.neumorphism.NeumorphCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        app:neumorph_shapeType="pressed">
        <EditText
            android:id="@+id/wokerlName"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_creadential"
            android:hint="Full name"
            android:paddingLeft="30dp"/>
    </soup.neumorphism.NeumorphCardView>



    <soup.neumorphism.NeumorphCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        app:neumorph_shapeType="pressed">
        <EditText
            android:id="@+id/workerAddress"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_creadential"
            android:hint="Address"
            android:paddingLeft="30dp"/>
    </soup.neumorphism.NeumorphCardView>


    <soup.neumorphism.NeumorphCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        app:neumorph_shapeType="pressed">
        <EditText
            android:id="@+id/workerPhone"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:background="@drawable/edit_text_creadential"
            android:hint="Phone"
            android:paddingLeft="30dp"
            android:inputType="phone"
            />
    </soup.neumorphism.NeumorphCardView>


    <soup.neumorphism.NeumorphButton
        android:id="@+id/add_btn"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_55sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Add"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/_9sdp"
        app:neumorph_backgroundColor="@color/success"
        app:neumorph_shadowColorDark="@color/dark_shadow"
        app:neumorph_shadowColorLight="@color/light_shadow"
        android:elevation="@dimen/_5sdp"/>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/cancel_btn"
        android:layout_width="@dimen/_230sdp"
        android:layout_height="@dimen/_60sdp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Cancel"
        android:textStyle="bold"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/_17sdp"
        app:neumorph_backgroundColor="@color/lightGray"
        app:neumorph_shadowColorDark="@color/dark_shadow"
        app:neumorph_shadowColorLight="@color/light_shadow"
        android:elevation="@dimen/_5sdp"/>

</LinearLayout>